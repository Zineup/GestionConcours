@model GestionConcours.Models.InfoPersoModel
@{
    ViewBag.Title = "Step1";
    Layout = null;
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"/>
<h2 class="text-center mt-3">Step 1 : Information Personelle</h2>

