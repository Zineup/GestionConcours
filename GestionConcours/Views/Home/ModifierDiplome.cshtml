                                                @Html.ValidationMessageFor(model => model.Semestre5, "", new { @class = "text-danger" })
                                            </div>



                                        </div>

                                        <div class="rs-select2--dark rs-select2--md rs-select2--border" style="margin-right: 30px">

                                            <div>
                                                @Html.EditorFor(model => model.Semestre2, new { htmlAttributes = new { @class = "form-control", @placeholder = "Note Semestre2" } })
                                                @Html.ValidationMessageFor(model => model.Semestre2, "", new { @class = "text-danger" })
