                                        <div class="form-group">
                                            <h3 class="register-heading">Diplome obtenu</h3><br />


                                            <select name="Type" id="Type" class="form-control">
                                                <option selected>-- Choix de type du Diplôme --</option>

                                                @if (Session["niveau"].ToString() == "3")
                                                {
                                                    <option value="DUT">DUT</option>
                                                    <option value="DEUG">DEUG</option>
                                                    <option value="Lic.pro-DUT">Liscence Professionnelle - DUT</option>
                                                    <option value="Lic.pro-DEUG">Liscence Professionnelle - DEUG</option>
                                                    <option value="Lic.fnd-DUT">Liscence Fondamentale - DUT</option>
                                                    <option value="Lic.fnd-DEUG">Liscence Fondamentale - DEUG</option>
                                                    <option value="Lic.st-DUT">Liscence ST - DUT</option>
                                                    <option value="Lic.st-DEUG">Liscence ST - DEUG</option>
                                                }
                                                else if (Session["niveau"].ToString() == "4")
                                                {
                                                    <option value="Lic.pro">Liscence Professionnelle </option>
                                                    <option value="Lic.fnd">Liscence Fondamentale - DUT</option>
                                                    <option value="Lic.st">Liscence Sciences et Techniques </option>

                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.Specialite, "Specialité", new { htmlAttributes = new { @class = "form-control",@placeholder="Specialité" } })
                                            @Html.ValidationMessageFor(model => model.Specialite, "", new { @class = "text-danger" })
