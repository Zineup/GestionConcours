                                                @Html.ValidationMessageFor(model => model.Semestre6, "", new { @class = "text-danger" })
                                            </div>




                                        </div>
                                    </div>


                                    <div class="col-md-8 offset-2">
                                        <div class="form-group" style="margin-left: 260px">
                                            <br /><br />
                                            <button type="submit" class="btn btn-success" id="maj">Mettre à jour</button>

                                        </div>
                                    </div>
                                    <br /><br />




                                </div>
                            }
