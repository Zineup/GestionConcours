
@{
    ViewBag.Title = "Epreuves";
}

<style>
    body{
        margin:75px;
    }

    h2
    {
        margin:10px;
        text-align:center;
    }
</style>

<h2 >Telecharger les anciens épreuves</h2> 

<table class="table">
    
    <thead class="bg-light">
     <tr>
         <th>Année</th>
         <th>Matiere</th>
         <th>Download</th>
     </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Annee</td>
                <td>@item.Matiere</td>
                <td><a href="Download?fichier=@item.NomFichier" target="_blank" > Download </a></td>
            </tr>
        }
    </tbody>
</table>