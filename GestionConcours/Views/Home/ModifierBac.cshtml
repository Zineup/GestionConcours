@model GestionConcours.Models.Baccalaureat
@{
    ViewBag.Title = "ModifierBac";
}

<section>
    <div class="section__content section__content--p30 m-t-75">
        <div class="container-fluid">
            <!-- USER DATA-->
            <div class="user-data m-b-40 ">

                <h2 class="title-3 mb-4 text-center font-weight-bold">
                    <i class="iconify mr-3" data-icon="mdi:bulletin-board" data-inline="true" style="color: coral; height:32px; width:32px;"></i>
                    Notes du Baccalauréat
                </h2>
                

                @using (Html.BeginForm("ModifierBac", "Home", FormMethod.Post))
                {

                    <hr class="col-md-7 offset-md-2 mb-4" />
                    <div class="row d-flex justify-content-center m-b-30">

                        <div class="col-md-8">

                            <div class="form-horizontal ">


                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Cne)


                                <div class="form-group">
                                    @Html.LabelFor(model => model.TypeBac, "Type du Bac :", htmlAttributes: new { @class = "control-label col-md-10 text-secondary font-weight-bold" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.TypeBac,
                                       new List<SelectListItem>
                                       {
                                                    new SelectListItem{Text="SMA", Value="SMA"},
                                                    new SelectListItem{Text="SMB", Value="SMB"},
                                                    new SelectListItem{Text="SVT", Value="SVT"},
                                                    new SelectListItem{Text="PC", Value="PC"}
                                       }, "--- Séléctionner un type ---", htmlAttributes: new { @class = "form-control " })
                                        @Html.ValidationMessageFor(model => model.TypeBac, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DateObtentionBac, "Date d'obtention du Bac :", htmlAttributes: new { @class = "control-label col-md-10 text-secondary font-weight-bold" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DateObtentionBac, new { htmlAttributes = new { @class = "form-control", placeholder = "YYYY/YYYY " } })
                                        @Html.ValidationMessageFor(model => model.DateObtentionBac, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.NoteBac, "Note du Bac :", htmlAttributes: new { @class = "control-label col-md-10 text-secondary font-weight-bold" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NoteBac, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NoteBac, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MentionBac, "Metion du Bac :", htmlAttributes: new { @class = "control-label col-md-10 text-secondary font-weight-bold" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.MentionBac,
                                       new List<SelectListItem>
                                        {
                                            new SelectListItem{Text="Très Bien", Value="Très Bien"},
                                            new SelectListItem{Text="Bien", Value="Bien"},
                                            new SelectListItem{Text="Assez Bien", Value="Assez Bien"},
                                            new SelectListItem{Text="Passable", Value="Passable"}
                                        }
                                       , "--- Séléctionner une mention ---", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MentionBac, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10 d-flex justify-content-end">
                                        <input type="submit" value=" Enregistrer " class="btn btn-primary px-4 mt-2" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }




            </div>
        </div>
    </div>
</section>

