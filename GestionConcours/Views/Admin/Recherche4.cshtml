                        <option value="deug">Deug</option>
                        <option value="bts">Bts</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-control" name="filiere" id="filiere">
                        <option selected value="0">Choix Filiere</option>
                        <option value="Informatique">Informatique</option>
