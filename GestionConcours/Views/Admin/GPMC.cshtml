
@{
	ViewBag.Title = "GPMC";
}



@model IEnumerable<GestionConcours.Models.CorrectionModel>

@{
	ViewBag.Title = "corection";
	Layout = "~/Views/Shared/_TabLayout.cshtml";
}


		<!-- Begin Page Content -->
		<div class="container-fluid">

			<div class="align-content-center">
				<h3 class="font-weight-bold text-center pt-3 pb-5">Listes des candidats présents au concour d'accès en 3 ème année</h3>

			</div>
			@using (Html.BeginForm("GPMC_Post", "Admin", FormMethod.Post))
			{
				<div>
					<table class="table table-bordered ">
						<tr>
							<th class="text-center">N</th>
							<th class="text-center">Dossier</th>
							<th class="text-center">Cin</th>
							<th class="text-center">Nom</th>
							<th class="text-center">Prenom</th>
							<th class="text-center">Diplôme</th>
							<th class="text-center">Filiere</th>
							<th class="text-center">Math</th>
							<th class="text-center">Spécialité</th>

						</tr>
						<tbody id="tbody">
							@{int i = 1;}
							@foreach (var etudiants in Model)
							{
							<tr>
								<td class="text-center">@(i++)</td>
								<td class="text-center">@Html.DisplayFor(modelItem => etudiants.Num_dossier)</td>
								<td class="text-center">@Html.DisplayFor(modelItem => etudiants.Cin)</td>
								<td class="text-center">@Html.DisplayFor(modelItem => etudiants.Nom)</td>
								<td class="text-center">@Html.DisplayFor(modelItem => etudiants.Prenom)</td>
								<td class="text-center">@Html.DisplayFor(modelItem => etudiants.Diplome)</td>
								<td class="text-center">@Html.DisplayFor(modelItem => etudiants.Filiere)</td>
								<td class="text-center">
									@Html.TextBoxFor(modelItem => etudiants.NoteMath, new { @class = "form-control" })
									@Html.HiddenFor(modelItem => etudiants.Cne, new { @class = "form-control" })
								</td>
								<td class="text-center">@Html.TextBoxFor(modelItem => etudiants.NoteSpecialite, new { @class = "form-control" })</td>


							</tr>

							}
						</tbody>

					</table>
					<div class="col-md-3 offset-4 mt-3">
						<input type="submit" id="submit" value="Valider les notes" class="btn btn-primary btn-block" />

					</div>

				</div>
			}
			<h1 id="dd"></h1>

		</div>
		<!-- /.container-fluid -->




